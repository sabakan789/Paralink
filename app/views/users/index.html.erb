<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8 users-container">
        <h1 class="text-conteiner text-white">ユーザー一覧</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <% @users.order('created_at DESC').each do |user| %>
      <div class="row">
        <div class="col-md-offset-2 col-md-8 micropost-conteiner">
        <div class = "micropost-user-name index-user-name">
          <%= link_to user.name, "users/#{user.id}" ,:style=>"color:white;"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
