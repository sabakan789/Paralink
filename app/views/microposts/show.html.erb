<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-6 micropost-conteiner micropost-show">
        <h2 class = "micropost-user-name">
          <%= @micropost.user.name %>
        </h2>
        <p class = "micropost-content" >
          <%= @micropost.content %>
        </p>
        <h3>コメント</h3>
          <% @micropost.comments.each do |comment| %>
          <p>
            <%= comment.user.name %>
          </p>
        <p class="topic-text">
          <%= comment.comment %>
        </p>
          <% end %>
        <%= link_to "削除", micropost_path(@micropost.id) , method: :delete, data: {confirm: "本当に削除しますか？" }%>
      </div>
    </div>
  </div>
</div>
