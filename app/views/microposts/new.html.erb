<div class="wrapper add-color">
  <div class="container default-container">
    <h1 class="text-white text-center">新しい投稿</h1>
    <div class="row">
      <div class="form-conter col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8  col-xs-offset-1 col-xs-10">
        <%= form_with model: @micropost, url: microposts_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :content, '投稿内容' %>
          <%= form.text_area :content, placeholder: "最大200文字です", class: 'form-control',id: 'user_new_micropost' %>
        </div>
        <%= form.submit '投稿する', class: 'btn-block btn-white vertical-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
