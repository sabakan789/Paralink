<div class="wrapper add-color">
  <div class="container default-container">
    <h1 class="text-white text-center">プロフィールを編集する</h1>
    <div class="row">
      <div class="form-conter col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8  col-xs-offset-1 col-xs-10">
        <%= form_with(model: @profile, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :userimage, "プロフィール画像" %>
          <%= form.file_field :userimage, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :profile,"自己紹介" %>
          <%= form.text_area :profile, class: 'form-control' %>
        </div>
        <%= form.hidden_field :user_id, :value => params[:user_id] %>
        <%= form.submit '更新する', class: 'btn-block btn-white vertical-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
