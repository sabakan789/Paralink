<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-6 micropost-conteiner micropost-show">
        <%= form_for @profile,url:user_profiles_path do |f| %>
          <%= f.label :userimage %>
          <%= f.file_field :userimage %>
          <%= f.label :profile,"画像の説明" %>
          <%= f.text_area :profile, class: 'form-control' %>
          <%= f.hidden_field :user_id, :value => params[:user_id] %>
          <%= f.submit '投稿する'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
