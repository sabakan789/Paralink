<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-conter">コメントする</h1>
        <%= form_for @comment,url: comments_create_path do |f| %>
        <div class="form-group">
          <%= f.label :comment, 'コメント' %>
          <%= f.text_area :comment, class: 'form-control' %>
          <%= f.hidden_field :micropost_id, :value => params[:micropost_id] %>
          <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
