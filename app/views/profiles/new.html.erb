<div class="wrapper add-color">
  <div class="container default-container">
    <h1 class="text-white text-center">プロフィールを作成する</h1>
    <div class="row">
      <div class="form-conter col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8  col-xs-offset-1 col-xs-10">
        <%= form_for @profile,url:user_profiles_path do |f| %>
        <div class="form-group">
          <%= f.label :userimage, "プロフィール画像" %>
          <%= f.file_field :userimage, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile,"自己紹介" %>
          <%= f.text_area :profile,placeholder: "最大250文字です", class: 'form-control' %>
        </div>
        <%= f.hidden_field :user_id, :value => params[:user_id] %>
        <%= f.submit '作成する', class: 'btn-block btn-white vertical-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
