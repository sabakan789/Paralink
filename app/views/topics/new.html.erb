<div class="wrapper add-color">
  <div class="container default-container">
    <h1 class="text-white text-center">画像の追加</h1>
    <div class="row">
      <div class="form-conter text-center col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8  col-xs-offset-1 col-xs-10">
        <%= form_for @topic,url:micropost_topics_path do |f| %>
        <div class="form-group">
          <%= f.label :image,"追加する画像を選択して下さい", class: 'text-brack bg-warning' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description,"目に障害がある人のために、30文字以内で画像の説明をお願いします" , class: 'text-brack bg-warning'%>
          <%= f.text_area :description, placeholder: "例： 海の画像です", class: 'form-control' %>
        </div>
          <%= f.hidden_field :micropost_id, :value => params[:micropost_id] %>
          <%= f.submit '追加する', class: 'btn-block btn-white vertical-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
