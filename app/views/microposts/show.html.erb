<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-6 micropost-conteiner micropost-show">
        <h2 class = "micropost-user-name">
          <%= @micropost.user.name %>
        </h2>
        <p class = "micropost-content" >
          <%= @micropost.content %>
        </p>
        <%= link_to "投稿を削除", micropost_path(@micropost.id) , method: :delete, data: {confirm: "本当に削除しますか？" }%>
        <h3>コメント一覧</h3>
        <p><%=link_to "コメントする", comments_path(micropost_id: @micropost.id) %></p>
          <% @micropost.comments.each do |comment| %>
          <p>
            <%= comment.user.name %>
          </p>
        <p class="topic-text">
          <%= comment.comment %>
        </p>
        <p>
          <%= link_to "コメントを削除", comments_destroy_path(micropost_id: @micropost.id, comment_id: comment.id), method: :delete, data: {confirm: "本当に削除しますか？" }%>
        </p>
          <% end %>
      </div>
    </div>
  </div>
</div>
